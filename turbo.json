{
  "$schema": "https://turbo.build/json-schema.json",
  "globalEnv": ["NODE_ENV", "DEBUG"],
  "globalDependencies": ["package.json", ".env"],
  "tasks": {
    "dev": {
      "cache": false,
      "interactive": true,
      "persistent": true
    },
    "build": {
      "outputs": ["dist/**", "build/**"],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "interactive": true,
      "persistent": true
    },
    "lint": {
      "outputs": [""],
      "cache": true
    },
    "format": {
      "cache": false
    },
    "type-check": {
      "cache": true,
      "outputs": [""]
    }
  }
}
